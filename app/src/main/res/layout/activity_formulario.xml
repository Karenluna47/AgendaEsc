<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Formulario">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nombre_m"
            android:layout_marginBottom="19dp" app:layout_constraintEnd_toEndOf="@+id/id_materia"
            app:layout_constraintBottom_toTopOf="@+id/acronimo" app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginEnd="1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/url_m"
            app:layout_constraintStart_toStartOf="@+id/acronimo_m" android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_materia"/>
    <TextView
            android:text="Materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_m"
            app:layout_constraintStart_toStartOf="@+id/nombre_m"
            android:layout_marginStart="1dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/nombre_m"/>
    <TextView
            android:text="URL clases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/texto_url"
            app:layout_constraintStart_toStartOf="@+id/url_m"
            android:layout_marginStart="1dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/url_m"/>
    <TextView
            android:text="Acrónimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/acronimo"
            app:layout_constraintStart_toStartOf="@+id/acronimo_m"
            android:layout_marginStart="1dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/acronimo_m"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/acronimo_m"
            app:layout_constraintStart_toStartOf="@+id/nombre_m" android:layout_marginBottom="11dp"
            app:layout_constraintBottom_toTopOf="@+id/texto_url"/>
    <Button
            android:text="Añadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_materia"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="78dp"/>
    <TextView
            android:text="Codigo de  materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="79dp" android:layout_marginStart="73dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/id_materia"
            app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="8dp" android:layout_marginStart="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Nombre del Maestro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_nom_maestro"
            app:layout_constraintStart_toStartOf="@+id/id_materia"
            android:layout_marginTop="22dp" android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@+id/id_materia"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nombre_maestro_form"
            app:layout_constraintStart_toStartOf="@+id/text_m"
            android:layout_marginTop="34dp" app:layout_constraintTop_toBottomOf="@+id/text_nom_maestro"
            app:layout_constraintEnd_toEndOf="@+id/id_materia"/>
</androidx.constraintlayout.widget.ConstraintLayout>