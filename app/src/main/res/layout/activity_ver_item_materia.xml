<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ver_item_materia">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nombre_materia"
            app:layout_constraintStart_toStartOf="@+id/name_materia" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/name_materia"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nombre_mtro"
            app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/acronimo_materia"
            app:layout_constraintStart_toStartOf="@+id/Acronimo" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/Acronimo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/link_materia"
            app:layout_constraintStart_toStartOf="@+id/textView5" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <Button
            android:text="eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/delete"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Nombre de la materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name_materia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="82dp"
            android:layout_marginStart="80dp"/>
    <TextView
            android:text="Profesor "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/nombre_materia"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/nombre_materia"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Acronimo"
            app:layout_constraintStart_toStartOf="@+id/nombre_mtro"
            android:layout_marginTop="27dp" app:layout_constraintTop_toBottomOf="@+id/nombre_mtro"/>
    <TextView
            android:text="Link de clases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/acronimo_materia"
            android:layout_marginTop="21dp" app:layout_constraintTop_toBottomOf="@+id/acronimo_materia"/>
    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/edit_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="72dp" android:layout_marginBottom="35dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>