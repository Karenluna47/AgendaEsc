<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ver_item_tareas">

    <TextView
            android:text="Hora de entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/fecha_entrega2" android:layout_marginTop="31dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/fecha_entrega2"/>
    <TextView
            android:text="Fecha de entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="27dp"
            android:layout_marginStart="87dp"
            app:layout_constraintTop_toBottomOf="@+id/descripciontareas2"/>
    <TextView
            android:text="Titulo de la Tarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/textView14"
            android:layout_marginTop="89dp" app:layout_constraintEnd_toEndOf="@+id/textView12"/>
    <TextView
            android:text="Descripcion corta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/descripciontareas2" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/titulo_tarea2"/>
    <Button
            android:text="Editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bnt_edit_task"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="64dp"
            app:layout_constraintHorizontal_bias="0.216"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/descripciontareas2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="@+id/textView12"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titulo_tarea2"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView13" android:selectAllOnFocus="false"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bnt_delete_task"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginBottom="64dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/horaEntrega2"
            app:layout_constraintStart_toStartOf="@+id/textView11" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fecha_entrega2"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="@+id/descripciontareas2"/>
</androidx.constraintlayout.widget.ConstraintLayout>